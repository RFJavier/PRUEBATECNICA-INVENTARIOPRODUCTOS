<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Inventarios</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="home" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @if (State.IsInRole("Admin", "Bodeguero"))
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="productos">
                    <span class="bi bi-box-seam" aria-hidden="true"></span> Productos
                </NavLink>
            </div>
        }

        @if (State.IsInRole("Admin", "Operador"))
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="ventas">
                    <span class="bi bi-cart" aria-hidden="true"></span> Ventas
                </NavLink>
            </div>
        }

        @if (State.IsInRole("Admin"))
        {
            <div class="nav-item px-3 mt-3">
                <small class="text-muted px-2">ADMINISTRACIÓN</small>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="roles">
                    <span class="bi bi-shield-lock" aria-hidden="true"></span> Roles
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="usuarios">
                    <span class="bi bi-people" aria-hidden="true"></span> Usuarios
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="permisos">
                    <span class="bi bi-key" aria-hidden="true"></span> Permisos
                </NavLink>
            </div>
        }

        <div class="nav-item px-3 mt-3">
            <button class="nav-link btn btn-link text-start w-100" @onclick="Logout">
                <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Cerrar Sesión
            </button>
        </div>
    </nav>
</div>

@code {
    [Inject] WEBAPP.Services.AuthState State { get; set; } = default!;
    [Inject] WEBAPP.Services.AuthService Auth { get; set; } = default!;
    [Inject] NavigationManager Nav { get; set; } = default!;

    private async Task Logout()
    {
        await Auth.LogoutAsync();
        Nav.NavigateTo("/", forceLoad: true);
    }
}

