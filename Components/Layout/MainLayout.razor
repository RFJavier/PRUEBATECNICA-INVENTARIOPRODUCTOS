@inherits LayoutComponentBase
@inject WEBAPP.Services.AuthState State
@inject WEBAPP.Services.AuthService Auth
@inject NavigationManager Nav

@if (State.IsAuthenticated)
{
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <div class="top-row px-4">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
}
else
{
    @Body
}

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool _checked;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!_checked)
        {
            _checked = true;
            var token = await Auth.GetTokenAsync();
            State.SetAuthenticated(!string.IsNullOrWhiteSpace(token));

            // If not authenticated and not already on login, navigate client-side to login
            var path = Nav.ToBaseRelativePath(Nav.Uri);
            if (!State.IsAuthenticated && !string.IsNullOrEmpty(path) && !path.Equals("login", StringComparison.OrdinalIgnoreCase))
            {
                Nav.NavigateTo("/");
            }

            StateHasChanged();
        }
    }
}
