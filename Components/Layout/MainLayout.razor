@inherits LayoutComponentBase
@inject WEBAPP.Services.AuthState State
@inject WEBAPP.Services.AuthService Auth
@inject NavigationManager Nav

@if (State.IsAuthenticated)
{
    <div class="d-flex flex-column min-vh-100">
        <!-- Top Navbar -->
        <nav class="navbar navbar-expand-lg top-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" href="home">
                    <i class="bi bi-box-seam me-2"></i>Inventarios
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <NavLink class="nav-link" href="home" Match="NavLinkMatch.All">
                                Inicio
                            </NavLink>
                        </li>
                        
                        @if (State.IsInRole("Admin", "Bodeguero"))
                        {
                            <li class="nav-item">
                                <NavLink class="nav-link" href="productos">
                                    Productos
                                </NavLink>
                            </li>
                        }

                        @if (State.IsInRole("Admin", "Supervisor", "Operador"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    Ventas
                                </a>
                                <ul class="dropdown-menu">
                                    @if (State.IsInRole("Admin", "Supervisor"))
                                    {
                                        <li><a class="dropdown-item" href="ventas">Gestión de Ventas</a></li>
                                    }
                                    @if (State.IsInRole("Admin", "Operador"))
                                    {
                                        <li><a class="dropdown-item" href="registrar-venta">Registrar Venta</a></li>
                                    }
                                </ul>
                            </li>
                        }

                        @if (State.IsInRole("Admin", "Supervisor"))
                        {
                            <li class="nav-item">
                                <NavLink class="nav-link" href="reportes">
                                    Reportes
                                </NavLink>
                            </li>
                        }

                        @if (State.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    Administración
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="roles">Roles</a></li>
                                    <li><a class="dropdown-item" href="usuarios">Usuarios</a></li>
                                    <li><a class="dropdown-item" href="permisos">Permisos</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center">
                        <span class="user-info me-3">
                            <i class="bi bi-person-circle me-1"></i>@State.Username
                        </span>
                        <button class="btn btn-outline-light btn-sm" @onclick="Logout">
                            <i class="bi bi-box-arrow-right"></i> Salir
                        </button>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="flex-grow-1" style="background-color: #f5f5f5;">
            <div class="main-content">
                @Body
            </div>
        </main>
    </div>
}
else
{
    @Body
}

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool _checked;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!_checked)
        {
            _checked = true;
            var token = await Auth.GetTokenAsync();

            var path = Nav.ToBaseRelativePath(Nav.Uri);
            if (!State.IsAuthenticated && !string.IsNullOrEmpty(path) && !path.Equals("login", StringComparison.OrdinalIgnoreCase))
            {
                Nav.NavigateTo("/");
            }

            StateHasChanged();
        }
    }

    private async Task Logout()
    {
        await Auth.LogoutAsync();
        Nav.NavigateTo("/", forceLoad: true);
    }
}
