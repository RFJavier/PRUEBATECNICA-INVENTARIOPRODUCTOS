@page "/login"
@page "/"
@inject WEBAPP.Services.AuthService Auth
@inject NavigationManager Nav

<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="card shadow-sm" style="max-width: 380px; width: 100%;">
        <div class="card-body p-4">
            <div class="text-center mb-3">
                <h5 class="fw-semibold mb-1">Bienvenido</h5>
                <small class="text-muted">Inicia sesión para continuar</small>
            </div>

            @if (errorMessage is not null)
            {
                <div class="alert alert-danger py-2" role="alert">@errorMessage</div>
            }

            <div class="mb-3">
                <label class="form-label">Usuario</label>
                <input class="form-control" @bind="username" placeholder="Tu usuario" autocomplete="username" />
            </div>
            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <input class="form-control" @bind="password" placeholder="Tu contraseña" type="password" autocomplete="current-password" />
            </div>

            <button class="btn btn-primary w-100" @onclick="DoLogin" disabled="@isSubmitting">
                @(isSubmitting ? "Ingresando..." : "Ingresar")
            </button>
        </div>
        <div class="card-footer bg-white text-center py-3">
            <small class="text-muted">© @DateTime.Now.Year Inventarios</small>
        </div>
    </div>
</div>

@code {
    private string username = "";
    private string password = "";
    private string? errorMessage;
    private bool isSubmitting;

    private async Task DoLogin()
    {
        if (isSubmitting) return;
        isSubmitting = true;
        errorMessage = null;
        try
        {
            var (ok, message) = await Auth.LoginAsync(username, password);
            if (ok)
            {
                Nav.NavigateTo("/home");
                return;
            }
            errorMessage = message;
        }
        catch (Exception)
        {
            errorMessage = "Ocurrió un error. Intenta nuevamente.";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
