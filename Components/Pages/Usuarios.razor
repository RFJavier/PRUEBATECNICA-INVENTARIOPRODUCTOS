@page "/usuarios"
@inject WEBAPP.Services.UserService UserService
@inject WEBAPP.Services.RoleService RoleService
@inject WEBAPP.Services.AuthState State

<PageTitle>Gestión de Usuarios</PageTitle>

@if (!State.IsInRole("Admin"))
{
    <div class="alert alert-danger">No tienes permisos para acceder a esta sección.</div>
}
else
{
    <div class="container-fluid">
        <!-- Notificación Toast -->
        @if (showNotification)
        {
            <div class="position-fixed top-0 end-0 p-3" style="z-index: 1100;">
                <div class="toast show @(notificationType == "success" ? "bg-success" : "bg-danger") text-white">
                    <div class="toast-header @(notificationType == "success" ? "bg-success" : "bg-danger") text-white">
                        <strong class="me-auto">@(notificationType == "success" ? "? Éxito" : "? Error")</strong>
                        <button type="button" class="btn-close btn-close-white" @onclick="() => showNotification = false"></button>
                    </div>
                    <div class="toast-body">
                        @notificationMessage
                    </div>
                </div>
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">Gestión de Usuarios</h3>
        </div>

        @if (isLoading)
        {
            <div class="text-center py-4">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>
        }
        else if (users.Count == 0)
        {
            <div class="alert alert-info">No hay usuarios registrados.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Usuario</th>
                            <th>Estado</th>
                            <th>Roles</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in users)
                        {
                            <tr>
                                <td>@u.Id</td>
                                <td>@u.Username</td>
                                <td>
                                    @if (u.IsActive)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactivo</span>
                                    }
                                </td>
                                <td>
                                    @foreach (var role in u.Roles)
                                    {
                                        <span class="badge bg-primary me-1">@role</span>
                                    }
                                    @if (u.Roles.Count == 0)
                                    {
                                        <span class="text-muted">Sin roles</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-success me-1" @onclick="() => ShowAssignRoleModal(u)">
                                        <i class="bi bi-person-plus"></i> Asignar Rol
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => ShowRemoveRoleModal(u)">
                                        <i class="bi bi-person-dash"></i> Quitar Rol
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <!-- Modal Asignar Rol -->
    @if (showAssignModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Asignar Rol a @selectedUser?.Username</h5>
                        <button type="button" class="btn-close" @onclick="CloseAssignModal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Seleccionar Rol</label>
                            <select class="form-select" @bind="selectedRole">
                                <option value="">-- Seleccione --</option>
                                @foreach (var r in availableRoles.Where(r => !selectedUser!.Roles.Contains(r.Name)))
                                {
                                    <option value="@r.Name">@r.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseAssignModal">Cancelar</button>
                        <button type="button" class="btn btn-success" @onclick="AssignRole" disabled="@isProcessing">
                            @(isProcessing ? "Asignando..." : "Asignar")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Modal Quitar Rol -->
    @if (showRemoveModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title">Quitar Rol de @selectedUser?.Username</h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseRemoveModal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Seleccionar Rol a Quitar</label>
                            <select class="form-select" @bind="selectedRole">
                                <option value="">-- Seleccione --</option>
                                @foreach (var role in selectedUser!.Roles)
                                {
                                    <option value="@role">@role</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseRemoveModal">Cancelar</button>
                        <button type="button" class="btn btn-danger" @onclick="RemoveRole" disabled="@isProcessing">
                            @(isProcessing ? "Quitando..." : "Quitar Rol")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

@code {
    private List<WEBAPP.Models.User> users = new();
    private List<WEBAPP.Models.Role> availableRoles = new();
    private bool isLoading = true;

    // Notification
    private bool showNotification;
    private string notificationMessage = string.Empty;
    private string notificationType = "success";

    // Modal state
    private bool showAssignModal;
    private bool showRemoveModal;
    private WEBAPP.Models.User? selectedUser;
    private string selectedRole = string.Empty;
    private bool isProcessing;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadData();
            StateHasChanged();
        }
    }

    private void ShowNotification(string message, string type = "success")
    {
        notificationMessage = message;
        notificationType = type;
        showNotification = true;
        _ = HideNotificationAfterDelay();
    }

    private async Task HideNotificationAfterDelay()
    {
        await Task.Delay(4000);
        showNotification = false;
        StateHasChanged();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var usersTask = UserService.GetAllAsync();
            var rolesTask = RoleService.GetAllAsync();
            await Task.WhenAll(usersTask, rolesTask);
            users = usersTask.Result.Data;
            availableRoles = rolesTask.Result.Data;
        }
        catch (Exception ex)
        {
            ShowNotification("Error al cargar datos: " + ex.Message, "error");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowAssignRoleModal(WEBAPP.Models.User u)
    {
        selectedUser = u;
        selectedRole = string.Empty;
        showAssignModal = true;
    }

    private void CloseAssignModal()
    {
        showAssignModal = false;
        selectedUser = null;
    }

    private void ShowRemoveRoleModal(WEBAPP.Models.User u)
    {
        selectedUser = u;
        selectedRole = string.Empty;
        showRemoveModal = true;
    }

    private void CloseRemoveModal()
    {
        showRemoveModal = false;
        selectedUser = null;
    }

    private async Task AssignRole()
    {
        if (selectedUser is null || string.IsNullOrWhiteSpace(selectedRole))
        {
            ShowNotification("Debe seleccionar un rol.", "error");
            return;
        }

        isProcessing = true;
        try
        {
            var (success, message) = await UserService.AssignRoleAsync(selectedUser.Id, selectedRole);
            if (success)
            {
                CloseAssignModal();
                await LoadData();
                ShowNotification(message);
            }
            else
            {
                ShowNotification(message, "error");
            }
        }
        catch (Exception ex)
        {
            ShowNotification("Error: " + ex.Message, "error");
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task RemoveRole()
    {
        if (selectedUser is null || string.IsNullOrWhiteSpace(selectedRole))
        {
            ShowNotification("Debe seleccionar un rol.", "error");
            return;
        }

        isProcessing = true;
        try
        {
            var (success, message) = await UserService.RemoveRoleAsync(selectedUser.Id, selectedRole);
            if (success)
            {
                CloseRemoveModal();
                await LoadData();
                ShowNotification(message);
            }
            else
            {
                ShowNotification(message, "error");
            }
        }
        catch (Exception ex)
        {
            ShowNotification("Error: " + ex.Message, "error");
        }
        finally
        {
            isProcessing = false;
        }
    }
}
