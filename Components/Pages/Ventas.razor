@page "/ventas"
@inject WEBAPP.Services.VentaService VentaService
@inject WEBAPP.Services.ProductoService ProductoService
@inject WEBAPP.Services.AuthState State
@inject NavigationManager Nav

<PageTitle>Ventas</PageTitle>

@if (!State.IsInRole("Admin", "Operador"))
{
    <div class="alert alert-danger">No tienes permisos para acceder a esta sección.</div>
}
else
{
    <div class="container-fluid">
        <!-- Notificación Toast -->
        @if (showNotification)
        {
            <div class="position-fixed top-0 end-0 p-3" style="z-index: 1100;">
                <div class="toast show @(notificationType == "success" ? "bg-success" : "bg-danger") text-white">
                    <div class="toast-header @(notificationType == "success" ? "bg-success" : "bg-danger") text-white">
                        <strong class="me-auto">@(notificationType == "success" ? "? Éxito" : "? Error")</strong>
                        <button type="button" class="btn-close btn-close-white" @onclick="() => showNotification = false"></button>
                    </div>
                    <div class="toast-body">
                        @notificationMessage
                    </div>
                </div>
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">Ventas</h3>
            <button class="btn btn-primary" @onclick="ShowCreateModal">
                <i class="bi bi-plus-lg"></i> Nueva Venta
            </button>
        </div>

        @if (isLoading)
        {
            <div class="text-center py-4">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>
        }
        else if (ventas.Count == 0)
        {
            <div class="alert alert-info">No hay ventas registradas.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Fecha</th>
                            <th>Vendedor</th>
                            <th>Total</th>
                            <th>Items</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var v in ventas)
                        {
                            <tr>
                                <td>@v.Idventa</td>
                                <td>@v.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@v.Vendedor</td>
                                <td>@v.Total.ToString("C2")</td>
                                <td>@v.Detalles.Count productos</td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-info me-1" @onclick="() => ShowViewModal(v)">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => ShowEditModal(v)">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmDelete(v)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <!-- Modal Crear/Editar Venta -->
    @if (showModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@(isEditing ? "Editar Venta" : "Nueva Venta")</h5>
                        <button type="button" class="btn-close" @onclick="CloseModal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Fecha</label>
                                <input class="form-control" type="datetime-local" @bind="formFecha" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Vendedor</label>
                                <input class="form-control" @bind="formVendedor" placeholder="Nombre del vendedor" />
                            </div>
                        </div>

                        <hr />
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6 class="mb-0">Detalle de Productos</h6>
                            <button class="btn btn-sm btn-success" @onclick="AddDetalle">
                                <i class="bi bi-plus"></i> Agregar Producto
                            </button>
                        </div>

                        @if (formDetalles.Count == 0)
                        {
                            <div class="alert alert-warning">Agregue al menos un producto a la venta.</div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Producto</th>
                                            <th style="width:100px;">Cantidad</th>
                                            <th style="width:120px;">Precio Unit.</th>
                                            <th style="width:100px;">IVA</th>
                                            <th style="width:120px;">Subtotal</th>
                                            <th style="width:50px;"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < formDetalles.Count; i++)
                                        {
                                            var index = i;
                                            var det = formDetalles[index];
                                            <tr>
                                                <td>
                                                    <select class="form-select form-select-sm" @bind="det.Idpro" @bind:after="() => OnProductoChanged(det)">
                                                        <option value="0">-- Seleccione --</option>
                                                        @foreach (var p in productos)
                                                        {
                                                            <option value="@p.Id">@p.Nombre (@p.Codigo)</option>
                                                        }
                                                    </select>
                                                </td>
                                                <td>
                                                    <input class="form-control form-control-sm" type="number" min="1" @bind="det.Cantidad" @bind:after="() => CalcularDetalle(det)" />
                                                </td>
                                                <td>
                                                    <input class="form-control form-control-sm" type="number" step="0.01" @bind="det.Precio" @bind:after="() => CalcularDetalle(det)" />
                                                </td>
                                                <td class="text-end align-middle">@det.Iva.ToString("C2")</td>
                                                <td class="text-end align-middle fw-bold">@det.Total.ToString("C2")</td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => RemoveDetalle(index)">
                                                        <i class="bi bi-x"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }

                        <!-- Resumen de Totales -->
                        <div class="card bg-light mt-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="mb-1"><strong>Cantidad de productos:</strong> @formDetalles.Sum(d => d.Cantidad)</p>
                                        <p class="mb-1"><strong>Items diferentes:</strong> @formDetalles.Count</p>
                                    </div>
                                    <div class="col-md-6 text-end">
                                        <p class="mb-1"><strong>Subtotal:</strong> @CalcularSubtotal().ToString("C2")</p>
                                        <p class="mb-1"><strong>IVA Total:</strong> @CalcularIvaTotal().ToString("C2")</p>
                                        <h5 class="text-primary mb-0"><strong>Total:</strong> @CalcularTotalGeneral().ToString("C2")</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancelar</button>
                        <button type="button" class="btn btn-primary" @onclick="SaveVenta" disabled="@isSaving">
                            @(isSaving ? "Guardando..." : "Guardar Venta")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Modal Ver Detalle -->
    @if (showViewModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Detalle de Venta #@viewingVenta?.Idventa</h5>
                        <button type="button" class="btn-close" @onclick="CloseViewModal"></button>
                    </div>
                    <div class="modal-body">
                        @if (viewingVenta is not null)
                        {
                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <strong>Fecha:</strong><br />@viewingVenta.Fecha.ToString("dd/MM/yyyy HH:mm")
                                </div>
                                <div class="col-md-4">
                                    <strong>Vendedor:</strong><br />@viewingVenta.Vendedor
                                </div>
                                <div class="col-md-4">
                                    <strong>Total:</strong><br /><span class="text-primary fs-5">@viewingVenta.Total.ToString("C2")</span>
                                </div>
                            </div>
                            <hr />
                            <h6>Productos</h6>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>Cantidad</th>
                                        <th>Precio</th>
                                        <th>IVA</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var d in viewingVenta.Detalles)
                                    {
                                        var prod = productos.FirstOrDefault(p => p.Id == d.Idpro);
                                        <tr>
                                            <td>@(prod?.Nombre ?? $"ID: {d.Idpro}")</td>
                                            <td>@d.Cantidad</td>
                                            <td>@d.Precio.ToString("C2")</td>
                                            <td>@d.Iva.ToString("C2")</td>
                                            <td class="fw-bold">@d.Total.ToString("C2")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseViewModal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Modal Confirmar Eliminar -->
    @if (showDeleteModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title">?? Confirmar Eliminación</h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseDeleteModal"></button>
                    </div>
                    <div class="modal-body">
                        <p>¿Estás seguro de que deseas eliminar la venta <strong>#@ventaToDelete?.Idventa</strong>?</p>
                        <p class="text-muted mb-0">Esta acción no se puede deshacer y eliminará todos los detalles asociados.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Cancelar</button>
                        <button type="button" class="btn btn-danger" @onclick="DeleteVenta" disabled="@isDeleting">
                            @(isDeleting ? "Eliminando..." : "Sí, Eliminar")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

@code {
    private List<WEBAPP.Models.VentaConDetalles> ventas = new();
    private List<WEBAPP.Models.Producto> productos = new();
    private bool isLoading = true;

    // Notification
    private bool showNotification;
    private string notificationMessage = string.Empty;
    private string notificationType = "success";

    // Modal state
    private bool showModal;
    private bool isEditing;
    private int editingId;
    private DateTime formFecha = DateTime.Now;
    private string formVendedor = string.Empty;
    private List<DetalleForm> formDetalles = new();
    private bool isSaving;

    // View modal
    private bool showViewModal;
    private WEBAPP.Models.VentaConDetalles? viewingVenta;

    // Delete modal
    private bool showDeleteModal;
    private WEBAPP.Models.VentaConDetalles? ventaToDelete;
    private bool isDeleting;

    private class DetalleForm
    {
        public int Idpro { get; set; }
        public int Cantidad { get; set; } = 1;
        public decimal Precio { get; set; }
        public decimal Iva { get; set; }
        public decimal Total { get; set; }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadData();
            StateHasChanged();
        }
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var ventasTask = VentaService.GetAllConDetallesAsync();
            var productosTask = ProductoService.GetAllAsync();
            await Task.WhenAll(ventasTask, productosTask);
            ventas = ventasTask.Result.Data;
            productos = productosTask.Result.Data;
        }
        catch (Exception ex)
        {
            ShowNotification("Error al cargar datos: " + ex.Message, "error");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowNotification(string message, string type = "success")
    {
        notificationMessage = message;
        notificationType = type;
        showNotification = true;
        _ = HideNotificationAfterDelay();
    }

    private async Task HideNotificationAfterDelay()
    {
        await Task.Delay(4000);
        showNotification = false;
        StateHasChanged();
    }

    private void ShowCreateModal()
    {
        isEditing = false;
        editingId = 0;
        formFecha = DateTime.Now;
        formVendedor = State.Username ?? string.Empty;
        formDetalles = new();
        showModal = true;
    }

    private void ShowEditModal(WEBAPP.Models.VentaConDetalles v)
    {
        isEditing = true;
        editingId = v.Idventa;
        formFecha = v.Fecha;
        formVendedor = v.Vendedor;
        formDetalles = v.Detalles.Select(d => new DetalleForm
        {
            Idpro = d.Idpro,
            Cantidad = d.Cantidad,
            Precio = d.Precio,
            Iva = d.Iva,
            Total = d.Total
        }).ToList();
        showModal = true;
    }

    private void CloseModal() => showModal = false;

    private void ShowViewModal(WEBAPP.Models.VentaConDetalles v)
    {
        viewingVenta = v;
        showViewModal = true;
    }

    private void CloseViewModal()
    {
        showViewModal = false;
        viewingVenta = null;
    }

    private void AddDetalle()
    {
        formDetalles.Add(new DetalleForm());
    }

    private void RemoveDetalle(int index)
    {
        if (index >= 0 && index < formDetalles.Count)
            formDetalles.RemoveAt(index);
    }

    private void OnProductoChanged(DetalleForm det)
    {
        var producto = productos.FirstOrDefault(p => p.Id == det.Idpro);
        if (producto is not null)
        {
            det.Precio = producto.Precio;
            CalcularDetalle(det);
        }
    }

    private void CalcularDetalle(DetalleForm det)
    {
        var subtotal = det.Cantidad * det.Precio;
        det.Iva = Math.Round(subtotal * 0.13m, 2);
        det.Total = Math.Round(subtotal + det.Iva, 2);
    }

    private decimal CalcularSubtotal() => formDetalles.Sum(d => d.Cantidad * d.Precio);
    private decimal CalcularIvaTotal() => formDetalles.Sum(d => d.Iva);
    private decimal CalcularTotalGeneral() => formDetalles.Sum(d => d.Total);

    private async Task SaveVenta()
    {
        if (string.IsNullOrWhiteSpace(formVendedor))
        {
            ShowNotification("El nombre del vendedor es requerido.", "error");
            return;
        }

        if (formDetalles.Count == 0 || formDetalles.All(d => d.Idpro == 0))
        {
            ShowNotification("Debe agregar al menos un producto válido.", "error");
            return;
        }

        isSaving = true;
        try
        {
            var request = new WEBAPP.Models.VentaRequest
            {
                Fecha = formFecha,
                Vendedor = formVendedor,
                Total = CalcularTotalGeneral(),
                Detalles = formDetalles
                    .Where(d => d.Idpro > 0)
                    .Select(d => new WEBAPP.Models.DetalleVentaRequest
                    {
                        Fecha = formFecha,
                        Idpro = d.Idpro,
                        Cantidad = d.Cantidad,
                        Precio = d.Precio,
                        Iva = d.Iva,
                        Total = d.Total
                    }).ToList()
            };

            if (isEditing)
            {
                var (success, message) = await VentaService.UpdateAsync(editingId, request);
                if (success)
                {
                    CloseModal();
                    await LoadData();
                    ShowNotification(message);
                }
                else
                {
                    ShowNotification(message, "error");
                }
            }
            else
            {
                var (success, message, id) = await VentaService.CreateAsync(request);
                if (success)
                {
                    CloseModal();
                    await LoadData();
                    ShowNotification(message);
                }
                else
                {
                    ShowNotification(message, "error");
                }
            }
        }
        catch (Exception ex)
        {
            ShowNotification("Error: " + ex.Message, "error");
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ConfirmDelete(WEBAPP.Models.VentaConDetalles v)
    {
        ventaToDelete = v;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        ventaToDelete = null;
    }

    private async Task DeleteVenta()
    {
        if (ventaToDelete is null) return;

        isDeleting = true;
        try
        {
            var (success, message) = await VentaService.DeleteAsync(ventaToDelete.Idventa);
            if (success)
            {
                CloseDeleteModal();
                await LoadData();
                ShowNotification(message);
            }
            else
            {
                ShowNotification(message, "error");
            }
        }
        catch (Exception ex)
        {
            ShowNotification("Error: " + ex.Message, "error");
        }
        finally
        {
            isDeleting = false;
        }
    }
}
