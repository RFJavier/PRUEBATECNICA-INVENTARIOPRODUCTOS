@page "/productos"
@inject WEBAPP.Services.ProductoService ProductoService
@inject WEBAPP.Services.AuthState State
@inject NavigationManager Nav

<PageTitle>Productos</PageTitle>

@if (!State.IsInRole("Admin", "Bodeguero"))
{
    <div class="alert alert-danger">No tienes permisos para acceder a esta sección.</div>
}
else
{
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">Productos</h3>
            <button class="btn btn-primary" @onclick="ShowCreateModal">
                <i class="bi bi-plus-lg"></i> Nuevo Producto
            </button>
        </div>

        @if (isLoading)
        {
            <div class="text-center py-4">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>
        }
        else if (productos.Count == 0)
        {
            <div class="alert alert-info">No hay productos registrados.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in productos)
                        {
                            <tr>
                                <td>@p.Id</td>
                                <td>@p.Producto1</td>
                                <td>@p.Precio.ToString("C2")</td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => ShowEditModal(p)">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmDelete(p)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        @if (errorMessage is not null)
        {
            <div class="alert alert-danger mt-3">@errorMessage</div>
        }
    </div>

    <!-- Modal Crear/Editar -->
    @if (showModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@(isEditing ? "Editar Producto" : "Nuevo Producto")</h5>
                        <button type="button" class="btn-close" @onclick="CloseModal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Nombre del Producto</label>
                            <input class="form-control" @bind="formProducto" placeholder="Ej: LAPICERO BIC" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Precio</label>
                            <input class="form-control" type="number" step="0.01" @bind="formPrecio" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancelar</button>
                        <button type="button" class="btn btn-primary" @onclick="SaveProducto" disabled="@isSaving">
                            @(isSaving ? "Guardando..." : "Guardar")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Modal Confirmar Eliminar -->
    @if (showDeleteModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirmar Eliminación</h5>
                        <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                    </div>
                    <div class="modal-body">
                        <p>¿Estás seguro de que deseas eliminar el producto <strong>@productoToDelete?.Producto1</strong>?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Cancelar</button>
                        <button type="button" class="btn btn-danger" @onclick="DeleteProducto" disabled="@isDeleting">
                            @(isDeleting ? "Eliminando..." : "Eliminar")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

@code {
    private List<WEBAPP.Models.Producto> productos = new();
    private bool isLoading = true;
    private string? errorMessage;

    // Modal state
    private bool showModal;
    private bool isEditing;
    private int editingId;
    private string formProducto = string.Empty;
    private decimal formPrecio;
    private bool isSaving;

    // Delete modal state
    private bool showDeleteModal;
    private WEBAPP.Models.Producto? productoToDelete;
    private bool isDeleting;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadProductos();
            StateHasChanged();
        }
    }

    private async Task LoadProductos()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            productos = await ProductoService.GetAllAsync();
        }
        catch (Exception ex)
        {
            errorMessage = "Error al cargar productos: " + ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowCreateModal()
    {
        isEditing = false;
        editingId = 0;
        formProducto = string.Empty;
        formPrecio = 0;
        showModal = true;
    }

    private void ShowEditModal(WEBAPP.Models.Producto p)
    {
        isEditing = true;
        editingId = p.Id;
        formProducto = p.Producto1;
        formPrecio = p.Precio;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private async Task SaveProducto()
    {
        if (string.IsNullOrWhiteSpace(formProducto))
        {
            errorMessage = "El nombre del producto es requerido.";
            return;
        }

        isSaving = true;
        errorMessage = null;
        try
        {
            var request = new WEBAPP.Models.ProductoRequest { Producto = formProducto, Precio = formPrecio };
            bool success;
            if (isEditing)
            {
                success = await ProductoService.UpdateAsync(editingId, request);
            }
            else
            {
                success = await ProductoService.CreateAsync(request);
            }

            if (success)
            {
                CloseModal();
                await LoadProductos();
            }
            else
            {
                errorMessage = "Error al guardar el producto.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error: " + ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ConfirmDelete(WEBAPP.Models.Producto p)
    {
        productoToDelete = p;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        productoToDelete = null;
    }

    private async Task DeleteProducto()
    {
        if (productoToDelete is null) return;

        isDeleting = true;
        errorMessage = null;
        try
        {
            var success = await ProductoService.DeleteAsync(productoToDelete.Id);
            if (success)
            {
                CloseDeleteModal();
                await LoadProductos();
            }
            else
            {
                errorMessage = "Error al eliminar el producto.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error: " + ex.Message;
        }
        finally
        {
            isDeleting = false;
        }
    }
}
