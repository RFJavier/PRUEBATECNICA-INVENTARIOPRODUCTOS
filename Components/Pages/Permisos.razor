@page "/permisos"
@inject WEBAPP.Services.EndpointPermissionService PermissionService
@inject WEBAPP.Services.AuthState State

<PageTitle>Permisos de Endpoints</PageTitle>

@if (!State.IsInRole("Admin"))
{
    <div class="alert alert-danger">No tienes permisos para acceder a esta sección.</div>
}
else
{
    <div class="container-fluid">
        <!-- Notificación Toast -->
        @if (showNotification)
        {
            <div class="position-fixed top-0 end-0 p-3" style="z-index: 1100;">
                <div class="toast show @(notificationType == "success" ? "bg-success" : "bg-danger") text-white">
                    <div class="toast-header @(notificationType == "success" ? "bg-success" : "bg-danger") text-white">
                        <strong class="me-auto">@(notificationType == "success" ? "? Éxito" : "? Error")</strong>
                        <button type="button" class="btn-close btn-close-white" @onclick="() => showNotification = false"></button>
                    </div>
                    <div class="toast-body">
                        @notificationMessage
                    </div>
                </div>
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">Permisos de Endpoints</h3>
            <button class="btn btn-primary" @onclick="ShowCreateModal">
                <i class="bi bi-plus-lg"></i> Nuevo Permiso
            </button>
        </div>

        @if (isLoading)
        {
            <div class="text-center py-4">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>
        }
        else if (permissions.Count == 0)
        {
            <div class="alert alert-info">No hay permisos configurados.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Ruta</th>
                            <th>Método</th>
                            <th>Roles Permitidos</th>
                            <th>Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in permissions)
                        {
                            <tr>
                                <td>@p.Id</td>
                                <td><code>@p.Route</code></td>
                                <td>
                                    <span class="badge @GetMethodBadgeClass(p.HttpMethod)">@p.HttpMethod</span>
                                </td>
                                <td>
                                    @foreach (var role in p.AllowedRolesCsv.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                    {
                                        <span class="badge bg-secondary me-1">@role.Trim()</span>
                                    }
                                </td>
                                <td>
                                    @if (p.IsEnabled)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => ShowEditModal(p)">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmDelete(p)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <!-- Modal Crear/Editar -->
    @if (showModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@(isEditing ? "Editar Permiso" : "Nuevo Permiso")</h5>
                        <button type="button" class="btn-close" @onclick="CloseModal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Ruta</label>
                            <input class="form-control" @bind="formRoute" placeholder="Ej: /api/productos" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Método HTTP</label>
                            <select class="form-select" @bind="formHttpMethod">
                                <option value="">-- Seleccione --</option>
                                <option value="GET">GET</option>
                                <option value="POST">POST</option>
                                <option value="PUT">PUT</option>
                                <option value="DELETE">DELETE</option>
                                <option value="PATCH">PATCH</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Roles Permitidos (separados por coma)</label>
                            <input class="form-control" @bind="formAllowedRoles" placeholder="Ej: Admin,Bodeguero" />
                            <small class="text-muted">Use * para permitir todos los roles</small>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" @bind="formIsEnabled" id="isEnabledCheck" />
                            <label class="form-check-label" for="isEnabledCheck">Habilitado</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancelar</button>
                        <button type="button" class="btn btn-primary" @onclick="SavePermission" disabled="@isSaving">
                            @(isSaving ? "Guardando..." : "Guardar")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Modal Confirmar Eliminar -->
    @if (showDeleteModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title">?? Confirmar Eliminación</h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseDeleteModal"></button>
                    </div>
                    <div class="modal-body">
                        <p>¿Estás seguro de que deseas eliminar el permiso para <strong>@permissionToDelete?.HttpMethod @permissionToDelete?.Route</strong>?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Cancelar</button>
                        <button type="button" class="btn btn-danger" @onclick="DeletePermission" disabled="@isDeleting">
                            @(isDeleting ? "Eliminando..." : "Sí, Eliminar")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

@code {
    private List<WEBAPP.Models.EndpointPermission> permissions = new();
    private bool isLoading = true;

    // Notification
    private bool showNotification;
    private string notificationMessage = string.Empty;
    private string notificationType = "success";

    // Modal state
    private bool showModal;
    private bool isEditing;
    private int editingId;
    private string formRoute = string.Empty;
    private string formHttpMethod = string.Empty;
    private string formAllowedRoles = string.Empty;
    private bool formIsEnabled = true;
    private bool isSaving;

    // Delete modal
    private bool showDeleteModal;
    private WEBAPP.Models.EndpointPermission? permissionToDelete;
    private bool isDeleting;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadPermissions();
            StateHasChanged();
        }
    }

    private string GetMethodBadgeClass(string method) => method.ToUpper() switch
    {
        "GET" => "bg-info",
        "POST" => "bg-success",
        "PUT" => "bg-warning text-dark",
        "DELETE" => "bg-danger",
        "PATCH" => "bg-secondary",
        _ => "bg-dark"
    };

    private void ShowNotification(string message, string type = "success")
    {
        notificationMessage = message;
        notificationType = type;
        showNotification = true;
        _ = HideNotificationAfterDelay();
    }

    private async Task HideNotificationAfterDelay()
    {
        await Task.Delay(4000);
        showNotification = false;
        StateHasChanged();
    }

    private async Task LoadPermissions()
    {
        isLoading = true;
        try
        {
            var (data, message) = await PermissionService.GetAllAsync();
            permissions = data;
        }
        catch (Exception ex)
        {
            ShowNotification("Error al cargar permisos: " + ex.Message, "error");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowCreateModal()
    {
        isEditing = false;
        editingId = 0;
        formRoute = string.Empty;
        formHttpMethod = string.Empty;
        formAllowedRoles = string.Empty;
        formIsEnabled = true;
        showModal = true;
    }

    private void ShowEditModal(WEBAPP.Models.EndpointPermission p)
    {
        isEditing = true;
        editingId = p.Id;
        formRoute = p.Route;
        formHttpMethod = p.HttpMethod;
        formAllowedRoles = p.AllowedRolesCsv;
        formIsEnabled = p.IsEnabled;
        showModal = true;
    }

    private void CloseModal() => showModal = false;

    private async Task SavePermission()
    {
        if (string.IsNullOrWhiteSpace(formRoute) || string.IsNullOrWhiteSpace(formHttpMethod))
        {
            ShowNotification("Ruta y método HTTP son requeridos.", "error");
            return;
        }

        isSaving = true;
        try
        {
            var request = new WEBAPP.Models.EndpointPermissionRequest
            {
                Route = formRoute,
                HttpMethod = formHttpMethod,
                AllowedRolesCsv = formAllowedRoles,
                IsEnabled = formIsEnabled
            };

            if (isEditing)
            {
                var (success, message, data) = await PermissionService.UpdateAsync(editingId, request);
                if (success)
                {
                    CloseModal();
                    await LoadPermissions();
                    ShowNotification(message);
                }
                else
                {
                    ShowNotification(message, "error");
                }
            }
            else
            {
                var (success, message, data) = await PermissionService.CreateAsync(request);
                if (success)
                {
                    CloseModal();
                    await LoadPermissions();
                    ShowNotification(message);
                }
                else
                {
                    ShowNotification(message, "error");
                }
            }
        }
        catch (Exception ex)
        {
            ShowNotification("Error: " + ex.Message, "error");
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ConfirmDelete(WEBAPP.Models.EndpointPermission p)
    {
        permissionToDelete = p;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        permissionToDelete = null;
    }

    private async Task DeletePermission()
    {
        if (permissionToDelete is null) return;

        isDeleting = true;
        try
        {
            var (success, message) = await PermissionService.DeleteAsync(permissionToDelete.Id);
            if (success)
            {
                CloseDeleteModal();
                await LoadPermissions();
                ShowNotification(message);
            }
            else
            {
                ShowNotification(message, "error");
            }
        }
        catch (Exception ex)
        {
            ShowNotification("Error: " + ex.Message, "error");
        }
        finally
        {
            isDeleting = false;
        }
    }
}
